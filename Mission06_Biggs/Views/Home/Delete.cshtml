@{
}

@model MovieModel
<h1>Are you sure you want to delete this movie?</h1>
<ul>
	<li>
		Title: @Model.Title
	</li>
	<li>
		Year: @Model.Year
	</li>
	<li>
		Category: @Model.Category
	</li>
	<li>
		Director: @Model.Director
	</li>
	<li>
		Rating: @Model.Rating
	</li>
	<li>
		Edited: @Model.Edited
	</li>
	<li>
		Lent To: @Model.LentTo
	</li>
	<li>
		Notes: @Model.Notes
	</li>
</ul>

<form asp-controller="Home" asp-action="Delete" method="post">
	<input type="hidden" asp-for="movieId" />

	<button class="btn btn-danger" type="submit">Delete</button>
	<a class="btn btn-info" asp-controller="Home" asp-action="MovieList">Cancel</a>
</form>